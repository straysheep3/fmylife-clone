<div class="container">
  <p>
    <%= link_to "Submit your scary story", new_story_path, class: "btn btn-primary" %>
  </p>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-9">
      <% @stories.each do |story| %>
      <div class="well well-lg">
        <p>
          <%= story.body %>
        </p>
        <br>
          <%= link_to "That scared me", like_story_path(story), method: :put, class: "btn btn-warning btn-xs" %><span class="text-warning"> (<%= story.get_upvotes.size %>)</span>
          <%= link_to "You wimp!", dislike_story_path(story), method: :put, class: "btn btn-success btn-xs" %><span class="text-success"> (<%= story.get_downvotes.size %>)</span>
          <a href="#" class="btn btn-link btn-xs">Comments</a><small><em>(300)</em></small>
          <small class="pull-right">Created by: <%= story.user.name %> on <%= story.created_at.strftime("%B %d, %Y at %l:%M %p") %></small>
      </div>
      <% end %>

    </div>
    <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title text-center">Categories</h3>
        </div>
        <div class="panel-body">
          <div class="table-responsive">
            <ul class="list-group">
              <% Category.all.each do |category| %>
                <li class="list-group-item"><%= category.name %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

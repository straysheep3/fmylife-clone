<div class="container">
  <p>
    <%= link_to "Submit your scary story", new_story_path, class: "btn btn-primary" %>
  </p>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-9">
      <% @stories.each do |story| %>
      <div class="well well-lg">
        <p>
          <%= story.body %>
        </p>
        <br>
          <a href="#" class="btn btn-warning btn-xs">That scared me</a><span class="text-warning"> (28)</span>
          <a href="#" class="btn btn-success btn-xs">You wimp!</a><span class="text-success"> (1200)</span>
          <a href="#" class="btn btn-link btn-xs">Comments</a><small><em>(300)</em></small>
          <small class="pull-right">Created by: <%= story.user.name %> on <%= story.created_at.strftime("%B %d, %Y at %l:%M %p") %></small>
      </div>
      <% end %>


      <nav class="text-center">
        <ul class="pagination">
          <li>
            <a href="#" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          <li class="active"><a href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#">4</a></li>
          <li><a href="#">5</a></li>
          <li>
            <a href="#" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
      </nav>
    </div>
    <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title text-center">Categories</h3>
        </div>
        <div class="panel-body">
          <div class="table-responsive">
            <ul class="list-group">
              <% Category.all.each do |category| %>
                <li class="list-group-item"><%= category.name %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
